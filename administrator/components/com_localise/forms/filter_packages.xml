<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="JSEARCH_FILTER"
			description="JSEARCH_FILTER"
			hint="JSEARCH_FILTER"
		/>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="JGLOBAL_SORT_BY"
			description="JGLOBAL_SORT_BY"
			onchange="this.form.submit();"
			default="ASC"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="title ASC">JGLOBAL_TITLE_ASC</option>
			<option value="title DESC">JGLOBAL_TITLE_DESC</option>
			<option value="language ASC">JGRID_HEADING_LANGUAGE_ASC</option>
			<option value="language DESC">JGRID_HEADING_LANGUAGE_DESC</option>
			<option value="version ASC">COM_LOCALISE_VERSION_ASC</option>
			<option value="version DESC">COM_LOCALISE_VERSION_DESC</option>
			<option value="core ASC">COM_LOCALISE_TYPE_ASC</option>
			<option value="core DESC">COM_LOCALISE_TYPE_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			default="25"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
